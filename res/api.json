{
    "name": "IIS API",
    "ADMIN":{
        "insert_user":{
            "request":{
                "login": "username",
                "role" : "a | m | r",
                "pwd"  : "password"
            },
            "response":{
                "status": "ok | login_used"
            }
        },

        "change_password":{
            "request":{
                "login": "username",
                "pwd"  : "new_password"
            },
            "response":{
                "status": "ok | wrong_login"
            }
        },

        "list_users":{
            "request":{
            },
            "response":{
                "users":[
                    {
                        "login": "username",
                        "role": "role"
                    }
                ]

            }
        },

        "delete_user":{
            "request":{
                "login": "username"
            },
            "response":{
                "status": "ok | wrong_login"
            }
        }
    },

    "MODERATOR":{
        "approve_subject":{
            "request":{
                "approved"  : "true | false",
                "login"     : "username",
                "subject_ID": "subject_ID"
            },
            "response":{
                "status"    : "ok | internal_error",
                "approved"  : "true | false",
                "login"     : "username",
                "subject_ID": "subject_ID"
            }
        }
    },

    "TEACHER":{
        "approve_student":{
            "request":{
                "login" : "student_username",
                "study" : "subject_ID",
                "approved": "true | false"
            },
            "response":{
                "status": "ok | internal_error",
                "login" : "student_username",
                "study" : "subject_ID",
                "approved": "true | false"
            }
        },

        "mark_answer":{
            "request":{
                "login"      : "student_username",
                "question_ID": "question_ID",
                "correct"    : "true | false"
            },
            "response":{
                "status": "ok | internal_error"
            }
        },

        "final_answer":{
            "request":{
                "question_ID": "question_ID",
                "answer"     : "answer"
            },
            "response":{
                "status": "ok | internal_error"
            }
        },

        "create_category":{
            "request":{
                "subject_ID": "subject_ID",
                "brief"     : "category_brief"
            },
            "response":{
                "status": "ok | internal_error",
                "category_ID" : "category_ID"
            }
        }
    },

    "STUDENT":{
        "write_answer":{
            "request":{
               "question_ID": "question_ID",
               "answer"     : "answer"
            },
            "response":{
                "status": "ok | internal_error"
            }
        },

        "react":{
            "request":{
                "answer_login"  : "student_login",
                "question_ID"   : "question_ID",
                "reaction"      : "reaction_message"
            },
            "response":{
                "status": "ok | internal_error"
            }
        },

        "vote":{
            "request":{
               "answer_login"  : "student_login",
               "question_ID"   : "question_ID"
            },
            "response":{
                "status": "ok | internal_error"
            }
        }
    },

    "TEACHER | STUDENT":{
        "ask_question":{
            "request":{
                "category_ID"  : "category_ID",
                "brief"        : "brief_version",
                "full_question": "question"
            },
            "response":{
                "status": "ok | internal_error",
                "question_ID" : "question_ID"
            }
        }
    },

    "REGISTERED":{
        "create_course":{
            "request":{
                "subject_ID"  : "subject_shortcut",
                "subject_name": "subject_full_name"
            },
            "response":{
                "status": "ok | internal_error"
            }
        },

        "sign_up_as_student":{
            "request":{
                "subject_ID"  : "subject_shortcut"
            },
            "response":{
                "status": "ok | internal_error"
            }
        }
    },

    "UNREGISTERED":{
        "login":{
            "request":{
                "login" : "login",
                "password" : "password"
            },
            "response":{
                "login" : "login",
                "role"  : "role"
            }

        },
        "list_subjects":{
            "request":{
                "unapproved": "true | false",
                "approved"  : "true | false",
                "undecided" : "true | false"
            },
            "response":{
                "status": "ok | unauthorized",
                "subjects":[
                    {
                        "login"       : "teacher_username",
                        "teach"       : "unapproved_subject_ID",
                        "subject_name": "subject_name",
                        "approved"    : "approved",
                        "role"        : "role_of_logged_in_user_in_regards_to_this_subject"
                    }
                ]
            }
        },

        "list_categories_to_subject":{
            "request":{
                "subject_ID" : "subject_ID"
            },
            "response":{
                "status"      : "ok | subject_not_found",
                "subject_name": "subject_name",
                "role"     : "true | false | null",
                "categories"   :[
                    {
                        "category_ID": "category_ID",
                        "brief"      : "category_brief"
                    }
                ]
            }
        },

        "list_questions_to_category":{
            "request":{
                "category_ID" : "category_ID"
            },
            "response":{
                "status"   : "ok | category_not_found",
                "brief"    : "category_brief",
                "role"     : "true | false | null",
                "questions":[
                    {
                        "question_ID": "question_ID",
                        "brief"      : "question_brief"
                    }
                ]
            }
        },

        "list_answers_to_question":{
            "request":{
                "question_ID": "question_ID"
            },
            "response":{
                "status"       : "ok | question_not_found",
                "brief"        : "question_brief",
                "full_question": "full_question",
                "answer"       : "final_answer",
                "role"     : "true | false | null",
                "answers":[
                    {
                        "login" : "login",
                        "answer": "student_answer"
                    }
                ]
            }
        },

        "list_reactions":{
            "request":{
                "question_ID" : "question_ID",
                "login": "answer_login"
            },
            "response":{
                "status"   : "ok | answer_not_found",
                "answer"   : "answer",
                "role"     : "true | false | null",
                "reactions":[
                    {
                        "reaction_ID"   : "reaction_ID",
                        "reaction_login": "reaction_login",
                        "text"          : "reaction_text"
                    }
                ]
            }
        },

        "list_points":{
            "request":{
            },
            "response":{
                "status" : "ok | subject_not_found",
                "points_leader":[
                    {   
                        "subject_ID"   : "subject_ID",
                        "login"        : "login",
                        "points"  : "points",
                    }
                ]
            }
        },

        "list_students_to_subjects": {
            "request":{
                "subject_ID" : "subject_ID"
            },
            "response":{
                "status" : "ok | subject_not_found",
                "students":[
                    {
                        "login" : "login",
                        "approved" : "approved"
                    }
                ]
            }

        }

    
}